%h3= @email_template.to_s
.span12
  = form_for @email_template, url: admin_email_template_path(@email_template.id), html: { class: "form-horizontal" } do |f|
    = f.hidden_field :id
    .control-group
      = f.label :description, class: "control-label"
      .controls
        = f.text_area :description, rows: 8, class: "input-xxlarge"
    .control-group
      = f.label :subject, class: "control-label"
      .controls
        = f.text_field :subject, class: "input-xxlarge"
    .control-group
      = f.label :body, class: "control-label"
      .controls
        = f.text_area :body, rows: 10, class: "input-xxlarge"
    .control-group
      = f.label :preview, class: "control-label"
      .controls
        = f.submit "Preview", class: "btn btn-info", name: 'preview'
        %br
        %strong= @email_template.subject_to_string
        %br
        %br
        = @email_template.body_to_html.html_safe
    .form-actions
      .pull-right
        = f.submit "Update", class: "btn btn-danger", name: 'submit'
        = link_to "Cancel", admin_email_templates_path, class: "btn"
