<div id="opportunity">
	<section class="section-title"><h2>New Opportunity</h2></section>
	<section class="section-content">
		<%= form_for(@opportunity, :html=>{:class=>"form-horizontal"}) do |f| %>
		  <% if @opportunity.errors.any? %>
			<div id="error_explanation">
			  <h2><%= pluralize(@opportunity.errors.count, "error") %> prohibited this opportunity from being saved:</h2>

			  <ul>
			  <% @opportunity.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			  <% end %>
			  </ul>
			</div>
		  <% end %>

		  <%= f.hidden_field :company_id, :value=>current_user.company_id %>
		  <div class="control-group">
			<%= f.label :name, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :name, :class=>"input-xlarge" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :description, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_area :description, :rows=>5, :class=>"input-xlarge" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :end_date, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :end_date, :class=>"input-large" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<label class="checkbox">
				<div class="controls">
					<%= f.check_box :buy_it_now, :class=>"input-xlarge" %>
					Buy it now?
				</div>
			</label>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :buy_it_now_price, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :buy_it_now_price, :class=>"input-small" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :starting_location_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :starting_location_id, :class=>"input-xlarge" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :ending_location_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :ending_location_id, :class=>"input-xlarge" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :start_date, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :start_date, :class=>"input-large" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :end_date, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :end_date, :class=>"input-large" %>
			</div>
		  </div>

		  <div class="control-group">
			<%= f.label :bidding_ends, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :bidding_ends, :class=>"input-large" %>
			</div>
		  </div>
		 
		 
		  <div class="form-actions">
			<%= f.submit :class=>"btn" %>
		  </div>

		<% end %>
	</section>
</div>