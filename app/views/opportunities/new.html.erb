<div id="opportunity">
	<section class="section-title"><h2>New Opportunity</h2></section>
	<section class="section-content">
		<%= form_for(@opportunity, :html=>{:class=>"form-horizontal"}) do |f| %>
		  <%= f.hidden_field :company_id, :value=>current_user.company_id %>
		  <div class="control-group">
			<%= f.label :name, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :name, :class=>"input-xlarge" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :description, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_area :description, :rows=>5, :class=>"input-xlarge" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :bidding_ends, :class=>"control-label" %>
			<div class="controls">
				<div class="input-append">
					<%= f.text_field :bidding_ends, :class=>"input-small date" %><span class="add-on"><i class="icon-calendar"></i></span>
				</div>
			</div>
			
			
		  </div>
		  
		  <div class="control-group">
			<label class="checkbox">
				<div class="controls">
					<%= f.check_box :buy_it_now, :class=>"input-xlarge" %>
					Buy it now?
				</div>
			</label>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :buy_it_now_price, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :buy_it_now_price, :class=>"input-small" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :starting_location_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :starting_location_id, :class=>"input-xlarge" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :ending_location_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :ending_location_id, :class=>"input-xlarge" %>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :start_date, :class=>"control-label" %>
			<div class="controls">
			
				<%= f.hidden_field :start_date, :class=>"input-large" %>
				<div class="input-append">
					<input type="text" size="16" class="input-small input-append date"/><span class="add-on"><i class="icon-calendar"></i></span>
				</div>

				<input type="text" class="input-small time"/>
			</div>
		  </div>
		  
		  <div class="control-group">
			<%= f.label :end_date, :class=>"control-label" %>
			<div class="controls">
				<div class="input-append">
					<input type="text" size="16" class="input-small input-append date"/><span class="add-on"><i class="icon-calendar"></i></span>
				</div>

				<input type="text" class="input-small time"/>
			</div>
		  </div>
		 
		 
		  <div class="form-actions">
			<%= f.submit :class=>"btn" %>
		  </div>

		<% end %>
	</section>
</div>