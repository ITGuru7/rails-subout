= simple_form_for @opportunity do |f|
  = f.input :name
  = f.input :description
  = f.input :starting_location
  = f.input :ending_location
  = f.input :start_date
  = f.input :end_date
  = f.input :bidding_ends
  = f.input :quick_winnable, :as => :boolean
  = f.input :for_favorites_only, :as => :boolean
  = f.button :submit, "Create Auction"
