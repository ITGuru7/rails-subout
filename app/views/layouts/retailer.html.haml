!!!
%html
  %head
    %title Subout
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse
      .navbar-inner
        .container-fluid
          .navbar-header
            = link_to "Subout", "#", class: "navbar-brand"
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to "Setting", edit_retailers_profile_path

    .container
      - if flash[:error]
        %p.alert.alert-error
          = h flash[:error]
          %a.close(href="#") x
      - if flash[:notice]
        %p.alert.alert-info
          = h flash[:notice]
          %a.close(href="#") x

      = yield
